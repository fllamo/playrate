.container.user-registration
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    .row.form-inputs
      .col-xs-6.col-xs-offset-3
        %br
        %br
        %br
        %h2 Register for an account
        = f.input :name, required: true, label: false, placeholder: 'Full Name'
        = f.input :email, required: true, label: false, placeholder: 'Email'
        = f.input :password, required: true, autocomplete: "off", label: false, placeholder: 'Password'
        = f.input :password_confirmation, required: true, autocomplete: "off", label: false, placeholder: 'Confirm Password'
        = f.input :player_sign_up, as: :hidden, input_html: {value: 1}
    .form-actions
      = f.button :submit, "Sign up", class: "btn-primary btn-lg"
      = render "devise/shared/links"